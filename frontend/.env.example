# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# ============================================
# AWS Cognito (Authentication)
# ============================================
REACT_APP_COGNITO_USER_POOL_ID=eu-west-1_XXXXXXXXX
REACT_APP_COGNITO_CLIENT_ID=<your-client-id>
REACT_APP_COGNITO_DOMAIN=<your-app-name>.auth.eu-west-1.amazoncognito.com
REACT_APP_AWS_REGION=eu-west-1

# ============================================
# API Configuration
# ============================================
REACT_APP_API_URL=http://localhost:5000
# For production: https://your-app.railway.app

# ============================================
# OAuth Redirect URLs
# ============================================
REACT_APP_REDIRECT_SIGN_IN=http://localhost:3000/
REACT_APP_REDIRECT_SIGN_OUT=http://localhost:3000/
# For production, add your Railway URL
