{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend/src",
      "env": {
        "FLASK_ENV": "development"
      }
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/frontend/src"
    }
  ]
}