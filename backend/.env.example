# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# ============================================
# AWS Cognito (Authentication)
# ============================================
COGNITO_USER_POOL_ID=eu-west-1_XXXXXXXXX
COGNITO_CLIENT_ID=<your-client-id>
COGNITO_CLIENT_SECRET=<your-client-secret>
AWS_REGION=eu-west-1

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost          # 'mysql' for Docker, 'localhost' for local
DB_USER=<your-db-user>
DB_PASSWORD=<your-db-password>
DB_NAME=finance
DB_PORT=3306

# ============================================
# Google Drive Integration
# ============================================
FACTUREN_FOLDER_ID=<your-google-drive-folder-id>
FACTUREN_FOLDER_NAME=Facturen

# ============================================
# OpenRouter AI
# ============================================
OPENROUTER_API_KEY=sk-or-v1-<your-api-key-here>

# ============================================
# AWS SNS (Notifications)
# ============================================
SNS_TOPIC_ARN=arn:aws:sns:eu-west-1:<account-id>:myadmin-notifications

# ============================================
# Test Environment
# ============================================
TEST_MODE=false
TEST_DB_NAME=testfinance
TEST_FACTUREN_FOLDER_ID=<your-test-folder-id>
TEST_FACTUREN_FOLDER_NAME=testFacturen

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=<generate-a-random-secret-key>
